<% layout('layouts/main') %>

<div class="h-full flex items-center justify-center py-10 px-4">
  <div class="bg-white w-full max-w-2xl p-8 rounded-xl shadow-lg">
    <h1 class="text-2xl font-bold mb-6 text-center"><%= title %></h1>

    <% if(errors) { %>
      <div class="text-red-500 font-semibold mb-4 text-center"><%= errors %></div>
    <% } %>

    <form method="POST" action="<%= agency._id ? '/admin/agencies/' + agency._id + '/edit' : '/admin/agencies/new' %>" class="space-y-5">

      <div>
        <label class="block font-medium mb-1">Tên Agency</label>
        <input type="text" name="name" required value="<%= agency.name || '' %>"
          class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" />
      </div>

      <div>
        <label class="block font-medium mb-1">Mô tả</label>
        <textarea name="description" rows="4"
          class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"><%= agency.description || '' %></textarea>
      </div>

      <div class="flex items-center justify-between">
        <button type="submit"
          class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-lg font-semibold transition duration-200">
          Lưu
        </button>
        <a href="/admin/agencies"
          class="text-gray-600 hover:text-red-600 font-medium transition duration-150">Hủy</a>
      </div>
    </form>
  </div>
</div>

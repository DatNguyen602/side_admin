<% layout('layouts/main') %>

<h1 class="text-2xl font-bold mb-4 text-center"><%= title %></h1>

<a class="px-4 hover:text-green-500" href="/admin/agencies/new">+ Tạo Agency mới</a>

<table class="mx-auto w-full mt-6 table-auto border-collapse border" cellpadding="8" cellspacing="0">
  <thead>
    <tr>
      <th>ID</th>
      <th>Tên Agency</th>
      <th>Mô tả</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (agencies.length === 0) { %>
      <tr><td colspan="4">Chưa có agency nào.</td></tr>
    <% } %>
    <% agencies.forEach(a => { %>
      <tr>
        <td><%= a._id %></td>
        <td><%= a.name %></td>
        <td><%= a.description || '-' %></td>
        <td>
          <a href="/admin/agencies/<%= a._id %>/edit">Sửa</a> |
          <form action="/admin/agencies/<%= a._id %>/delete" method="POST" style="display:inline" onsubmit="return confirm('Xóa agency này?');">
            <button type="submit">Xóa</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

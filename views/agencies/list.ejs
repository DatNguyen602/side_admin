<% layout('layouts/main') %>

<%
  const perms = (typeof user !== 'undefined' && user && user?.role && user.role.permissions) 
                ? user.role.permissions 
                : []; 
%>

<%- include('../partials/table', {
  title: title,
  action_new: `
    ${(user?.protected || perms.includes('agency:create')) ? 
    `<div class="flex px-6 mb-6">
      <a href="/admin/agencies/new" class="px-5 py-2 bg-green-600 text-white rounded-md hover:bg-green-500 transition duration-300 shadow-md">
        + Tạo Agency mới
      </a>
    </div>` : ``}
  `,
  action_search: '',
  headers: [
    { label: 'ID', key: '_id' },
    { label: 'Tên Agency', key: 'name' },
    { label: 'Mô tả', key: 'description' },
    { label: 'Actions', key: 'actions', center: true, minWidth: 'min-w-[9rem]', canAction: !(user?.protected || perms.includes('agency:update') || perms.includes('agency:delete')) }
  ],
  rows: agencies.map(a => ({
    _id: a._id,
    name: a.name,
    description: a.description || '-',
    actions: `
      ${(user?.protected || perms.includes('agency:update')) ? 
        `<a href="/admin/agencies/${a._id}/edit" class="inline-block px-3 py-1 bg-blue-600 text-white rounded hover:bg-blue-500 transition duration-300">Sửa</a>` 
        : ''}

      ${(user?.protected || perms.includes('agency:delete')) ? 
        `<form action="/admin/agencies/${a._id}/delete" method="POST" class="inline" onsubmit="return confirm('Xóa agency này?');">
          <button class="px-3 py-1 bg-red-600 text-white rounded hover:bg-red-500 transition duration-300" type="submit">Xóa</button>
        </form>` 
        : ''}
    `
  }))
}) %>

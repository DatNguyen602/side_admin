<% layout('layouts/main') %>

<h1>Admin Dashboard</h1>
<div class="container flex justify-center flex-wrap gap-1 p-4">
  <div class="card w-[90%] rounded-xl bg-gray-200 p-4">
    <h2 class="">Users</h2>
    <p class="px-4"><%= stats.userCount %></p>
  </div>
  <div class="card w-[90%] rounded-xl bg-gray-200 p-4">
    <h2 class="">Agencies</h2>
    <p class="px-4"><%= stats.agencyCount %></p>
  </div>
  <div class="card w-[90%] rounded-xl bg-gray-200 p-4">
    <h2 class="">Branches</h2>
    <p class="px-4"><%= stats.branchCount %></p>
  </div>
  <div class="card w-[90%] rounded-xl bg-gray-200 p-4">
    <h2 class="">Active Keys</h2>
    <p class="px-4"><%= stats.keyCount %></p>
  </div>
</div>

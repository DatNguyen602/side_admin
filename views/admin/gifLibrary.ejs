<% layout('layouts/util-wchat') %>

<div class="mx-auto p-6">
    <h2 class="text-2xl font-bold text-gray-800 text-center mb-6">GIFs Library</h2>

    <div class="grid grid-cols-3 md:grid-cols-5 lg:grid-cols-8 gap-4">
        <% gifs.forEach(g => { %>
            <div class="bg-white shadow-md rounded-lg overflow-hidden">
                <img 
                    src="<%= g.path %>" 
                    class="w-full h-32 object-cover transition-transform duration-300 hover:scale-105" 
                />
                <p class="p-3 text-sm text-gray-700 font-semibold truncate text-center"><%= g.title %></p>
            </div>
        <% }) %>
    </div>
</div>

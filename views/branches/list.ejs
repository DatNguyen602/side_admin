<% layout('layouts/main') %>

<%
  const perms = (typeof user !== 'undefined' && user && user.permissions)
                ? user.permissions
                : [];
%>

<%- include('../partials/table', {
  title: title,
  action_new: `
    ${(perms.includes('branches:create')) ? 
    `<div class="flex px-6 mb-6">
      <a href="/admin/branches/new" class="px-5 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition duration-300 shadow-md">
        + Tạo Branch mới
      </a>
    </div>` : ``}
  `,
  headers: [
    { label: 'ID', key: '_id' },
    { label: 'Tên Branch', key: 'name' },
    { label: 'Agency', key: 'agency' },
    { label: 'Actions', key: 'actions', center: true, minWidth: 'min-w-[9rem]', canAction: !(perms.includes('branches:update') || perms.includes('branches:delete')) }
  ],
  rows: branches.map(b => ({
    _id: b._id,
    name: b.name,
    agency: b.agency ? b.agency.name : '-',
    actions: `
      ${(perms.includes('branches:update')) ? 
        `<a href="/admin/branches/${b._id}/edit" class="inline-block px-3 py-1 bg-blue-600 text-white rounded hover:bg-blue-700 transition duration-300">Sửa</a>` 
        : ''}

      ${(perms.includes('branches:delete')) ? 
        `<form action="/admin/branches/${b._id}/delete" method="POST" class="inline" onsubmit="return confirm('Xóa branch này?');">
          <button class="px-3 py-1 bg-red-600 text-white rounded hover:bg-red-700 transition duration-300" type="submit">Xóa</button>
        </form>` 
        : ''}
    `
  }))
}) %>

<% layout('layouts/main') %>

<h1 class="text-2xl font-bold mb-4 text-center"><%= title %></h1>

<a class="px-4 hover:text-green-500" href="/admin/branches/new">+ Tạo Branch mới</a>

<table class="mx-auto w-full mt-6 table-auto border-collapse border" cellpadding="8" cellspacing="0">
  <thead>
    <tr>
      <th>ID</th>
      <th>Tên Branch</th>
      <th>Agency</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (branches.length === 0) { %>
      <tr><td colspan="4">Chưa có branch nào.</td></tr>
    <% } %>
    <% branches.forEach(b => { %>
      <tr>
        <td><%= b._id %></td>
        <td><%= b.name %></td>
        <td><%= b.agency ? b.agency.name : '-' %></td>
        <td>
          <a href="/admin/branches/<%= b._id %>/edit">Sửa</a> |
          <form action="/admin/branches/<%= b._id %>/delete" method="POST" style="display:inline" onsubmit="return confirm('Xóa branch này?');">
            <button type="submit">Xóa</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

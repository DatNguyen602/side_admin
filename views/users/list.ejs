<% layout('layouts/main') %>

<h1 class="text-3xl font-extrabold mb-6 text-center text-gray-800"><%= title %></h1>

<div class="flex px-6 mb-6">
  <a href="/admin/users/new" class="px-5 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition duration-300 shadow-md">
    + Tạo User mới
  </a>
</div>

<div class="overflow-x-auto mx-auto max-w-7xl px-4">
  <table class="min-w-full border border-gray-300 rounded-lg overflow-hidden shadow-sm">
    <thead class="bg-gray-100">
      <tr>
        <th class="text-left px-4 py-3 text-gray-700 uppercase text-sm font-semibold border-b border-gray-300">ID</th>
        <th class="text-left px-4 py-3 text-gray-700 uppercase text-sm font-semibold border-b border-gray-300">Username</th>
        <th class="text-left px-4 py-3 text-gray-700 uppercase text-sm font-semibold border-b border-gray-300">Email</th>
        <th class="text-left px-4 py-3 text-gray-700 uppercase text-sm font-semibold border-b border-gray-300">Role</th>
        <th class="text-left px-4 py-3 text-gray-700 uppercase text-sm font-semibold border-b border-gray-300">Agency</th>
        <th class="text-center px-4 py-3 text-gray-700 uppercase text-sm font-semibold border-b border-gray-300">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if(users.length === 0) { %>
        <tr>
          <td colspan="6" class="text-center py-6 text-gray-500 italic">Chưa có user nào.</td>
        </tr>
      <% } %>
      <% users.forEach(u => { %>
        <tr class="hover:bg-gray-50 transition duration-200">
          <td class="px-4 py-3 border-b border-gray-200 text-sm text-gray-700"><%= u._id %></td>
          <td class="px-4 py-3 border-b border-gray-200 text-sm text-gray-800 font-medium"><%= u.username %></td>
          <td class="px-4 py-3 border-b border-gray-200 text-sm text-gray-700"><%= u.email || '-' %></td>
          <td class="px-4 py-3 border-b border-gray-200 text-sm text-gray-700"><%= u.role ? u.role.name : '-' %></td>
          <td class="px-4 py-3 border-b border-gray-200 text-sm text-gray-700"><%= u.agency ? u.agency.name : '-' %></td>
          <td class="px-4 py-3 border-b border-gray-200 text-sm text-center space-x-2">
            <a href="/admin/users/<%= u._id %>/edit" class="inline-block px-3 py-1 bg-blue-600 text-white rounded hover:bg-blue-700 transition duration-300">Sửa</a>
            <form action="/admin/users/<%= u._id %>/delete" method="POST" class="inline-block" onsubmit="return confirm('Xóa user này?');">
              <button type="submit" class="px-3 py-1 bg-red-600 text-white rounded hover:bg-red-700 transition duration-300">Xóa</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

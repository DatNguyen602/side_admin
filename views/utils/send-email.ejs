<% layout('layouts/main') %>

<div class="h-full flex items-center justify-center">
  <div class="w-full px-8 h-full flex flex-col">
    <h1 class="text-2xl font-bold mb-6 text-center"><%= title || "Gửi Email Thông Báo" %></h1>

    <% if(errors) { %>
      <div class="text-red-500 font-semibold mb-4 text-center"><%= errors %></div>
    <% } %>

    <% if(alert) { %>
      <div class="text-green-500 font-semibold mb-4 text-center"><%= alert %></div>
    <% } %>

    <form method="POST" action="/mail/send-email" class="flex flex-col flex-1">
      <!-- Email và Tiêu đề giữ nguyên -->
      <div class="flex items-center mb-4">
        <label for="email" class="block font-medium mb-1 min-w-32">Email</label>
        <input list="email-list" id="email" name="email" placeholder="Nhập email hoặc chọn user..."
               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-400" />
        <datalist id="email-list">
          <% if (users && users.length > 0) { %>
            <% users.forEach(user => { %>
              <option value="<%= user.email %>"><%= user.username %> - <%= user.email %></option>
            <% }) %>
          <% } else { %>
            <option value="" disabled>Không có user nào</option>
          <% } %>
        </datalist>
      </div>

      <div class="flex items-center mb-4">
        <label for="emailSubject" class="block font-medium mb-1 min-w-32">Tiêu đề</label>
        <textarea id="emailSubject" name="emailSubject" rows="4" placeholder="Nhập tiêu đề email..."
                  class="w-full h-[32px] min-h-[32px] max-h-[32px] px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-400"></textarea>
      </div>

      <!-- Phần soạn thảo được cải tiến -->
      <div class="mb-4 flex flex-col flex-1">
        <label for="emailContent" class="block font-medium mb-1">Nội dung Email</label>

        <!-- Toolbar container -->
        <div id="toolbar" class="mb-2 flex flex-wrap gap-2"></div>

        <!-- Vùng soạn thảo rich text -->
        <div id="editor"
             class="w-full flex-1 min-h-[200px] max-h-[500px] px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-400 overflow-y-auto"
             contenteditable="true"
             data-placeholder="Nhập nội dung email...">
        </div>

        <!-- Thông tin số ký tự và số từ -->
        <div id="counter" class="text-sm text-gray-600 mt-1">
          <span id="char-count">Ký tự: 0</span> • <span id="word-count">Từ: 0</span>
        </div>

        <!-- Hidden input để chứa HTML khi submit -->
        <input type="hidden" id="emailContent" name="emailContent">
      </div>

      <div class="flex items-center justify-between">
        <!-- Nút xem trước -->
        <button type="button" id="previewEmail"
                class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg font-semibold transition duration-200">
          Xem trước
        </button>

        <!-- Nút Gửi Email -->
        <button type="submit"
                class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-lg font-semibold transition duration-200">
          Gửi Email
        </button>
      </div>
    </form>
  </div>
</div>

<!-- Script chính cho editor -->
<script src="/js/mail_editor.js"></script>

<style>
  /* Placeholder cho #editor */
  #editor:empty:before {
    content: attr(data-placeholder);
    color: #999;
    pointer-events: none;
    display: block;
  }

  /* Kiểu chung cho toolbar */
  #toolbar {
    background: #fafafa;
    border: 1px solid #ddd;
    border-radius: 6px;
    padding: 6px;
  }

  .toolbar-btn {
    background: #ffffff;
    color: #333;
    border: 1px solid #ccc;
    width: 30px;
    height: 30px;
    font-size: 14px;
    border-radius: 4px;
    cursor: pointer;
    transition: background 0.2s, border-color 0.2s;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .toolbar-btn:hover {
    background: #f0f0f0;
    border-color: #b3b3b3;
  }

  .toolbar-btn.active {
    background: #e0f2ff;
    border-color: #66b2ff;
  }

  .toolbar-btn:focus {
    outline: none;
  }

  .toolbar-select {
    height: 30px;
    border: 1px solid #ccc;
    border-radius: 4px;
    background: #fff;
    font-size: 14px;
    padding: 2px 4px;
    cursor: pointer;
  }

  /* Dropdown “More” cho toolbar responsive */
  #more-dropdown {
    position: relative;
  }
  #more-dropdown-btn {
    background: #ffffff;
    border: 1px solid #ccc;
    width: 30px;
    height: 30px;
    border-radius: 4px;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }
  #more-dropdown-btn:hover {
    background: #f0f0f0;
  }
  #more-dropdown-content {
    display: none;
    position: absolute;
    top: 36px;
    right: 0;
    background: #fff;
    border: 1px solid #ccc;
    border-radius: 4px;
    padding: 4px;
    z-index: 100;
    min-width: 120px;
  }
  #more-dropdown-content.open {
    display: block;
  }
  #more-dropdown-content .dropdown-item {
    display: block;
    padding: 4px 8px;
    font-size: 14px;
    color: #333;
    cursor: pointer;
    white-space: nowrap;
  }
  #more-dropdown-content .dropdown-item:hover {
    background: #f0f0f0;
  }
</style>
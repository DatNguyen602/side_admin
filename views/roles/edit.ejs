<% layout('layouts/main') %>

<div class="mt-4 border border-gray-300 rounded-lg p-4 bg-gray-50 shadow-sm">
    <h3 class="text-lg font-semibold mb-6">‚úèÔ∏è Ch·ªânh S·ª≠a Role: <%= role.name %></h3>

    <form action="/admin/roles/<%= role._id %>/edit" method="POST">
        <label class="block font-semibold mb-2">T√™n Role:</label>
        <input type="text" name="name" value="<%= role.name %>" class="border px-3 py-2 rounded w-full mb-4" required>

